{
	"name": "lantosbro/cli-localizer",
	"description": "A library for localization in CLI applications",
	"keywords": ["cli", "localization", "translation"],
	"homepage": "https://github.com/LantosBro/cli-localizer",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Lantos",
			"email": "me@lantos.in"
		}
	],
	"support": {
		"issues": "https://github.com/LantosBro/cli-localizer/issues",
		"source": "https://github.com/LantosBro/cli-localizer"
	},
	"require": {
		"php": "^7.4|^8.0",
		"ext-yaml": "*",
		"ext-json": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5"
	},
	"autoload": {
		"psr-4": {
			"CliLocalizer\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"CliLocalizer\\Tests\\": "tests/"
		}
	},
	"config": {
		"allow-plugins": {
			"composer/package-versions-deprecated": true,
			"dragon-code/codestyler": true,
			"ergebnis/composer-normalize": true,
			"symfony/thanks": true
		},
		"preferred-install": "dist",
		"sort-packages": true
	}
}